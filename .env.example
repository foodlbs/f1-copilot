# F1 Race Strategy Analyzer - Environment Variables
# Copy this file to .env and fill in your API keys

# =============================================================================
# Required API Keys
# =============================================================================

# Pinecone Vector Database
# Get your API key from: https://www.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here

# Anthropic Claude API
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Optional: AWS Configuration (for Lambda deployment)
# =============================================================================

# AWS Credentials
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# AWS Resource Names
F1_DATA_BUCKET=f1-race-analyzer-data
F1_METADATA_TABLE=f1-race-metadata
F1_SNS_TOPIC=arn:aws:sns:us-east-1:123456789:f1-updates

# =============================================================================
# Server Configuration
# =============================================================================

# API Server
PORT=8000
HOST=0.0.0.0
DEBUG=false
LOG_LEVEL=info

# Development port (for docker-compose dev profile)
DEV_PORT=8001

# =============================================================================
# Optional: Monitoring
# =============================================================================

# Grafana admin password
GRAFANA_PASSWORD=your_secure_password

# =============================================================================
# Optional: Model Configuration
# =============================================================================

# Model paths (defaults work for Docker)
MODEL_PATH=./models
DATA_PATH=./data
CACHE_PATH=./cache

# Training configuration
TRAINING_EPOCHS=100
TRAINING_BATCH_SIZE=32
DQN_EPISODES=500
